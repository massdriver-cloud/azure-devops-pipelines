{
  "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "67cace92-3e6d-45a5-a486-1ba7c27ace48",
  "name": "mass-app-patch",
  "friendlyName": "Set Image Version",
  "description": "Patch a Massdriver app bundle with a new image tag.",
  "helpMarkDown": "",
  "category": "Utility",
  "author": "Massdriver",
  "version": {
    "Major": 0,
    "Minor": 1,
    "Patch": 0
  },
  "instanceNameFormat": "Set Image Version",
  "inputs": [
    {
      "name": "project",
      "type": "string",
      "label": "Project Abbreviation",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify the project abbreviation."
    },
    {
      "name": "env",
      "type": "string",
      "label": "Environment Abbreviation",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify the environment abbreviation."
    },
    {
      "name": "manifest",
      "type": "string",
      "label": "Manifest Abbreviation",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Specify the manifest abbreviation."
    },
    {
      "name": "setImagePath",
      "type": "multiLine",
      "label": "Image Tag Path",
      "defaultValue": "<insert-image-tag-path> = \"$(Build.SourceVersion)\"",
      "required": true,
      "helpMarkDown": "Specify the path in the manifest where the image tag should be set, e.g. `.runtime.image.tag`."
    },
    {
      "name": "setImageValue",
      "type": "string",
      "label": "Image Tag Value",
      "defaultValue": "$(Build.SourceVersion)",
      "required": true,
      "helpMarkDown": "Specify the value to set for the image tag."
    }
  ],
  "execution": {
    "Node": {
      "target": "index.js"
    }
  }
}
